{
  "dataset_reader": {
    "type": "pubmed_rct"
  },
  "train_data_path": "https://s3-us-west-2.amazonaws.com/pubmed-rct/train.json",
  "validation_data_path": "https://s3-us-west-2.amazonaws.com/pubmed-rct/dev.json",
  "test_data_path": "https://s3-us-west-2.amazonaws.com/pubmed-rct/test.json",
  "evaluate_on_test": true,
  "model": {
    "type": "discourse_bnn_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "embedding_dropout": 0.25,
    "pre_encode_feedforward": {
      "input_dim": 300,
      "num_layers": 1,
      "hidden_dims": [300],
      "activations": ["relu"],
      "dropout": [0.25]
    },
    "encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 300,
      "num_layers": 1,
      "dropout": 0.2
    },
    "integrator": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 1800,
      "hidden_size": 300,
      "num_layers": 1
    },
    "integrator_dropout": 0.1,
    "output_layer": {
      "input_dim": 2400,
      "num_layers": 3,
      "output_dims": [400, 200, 5],
      "pool_sizes": 4,
      "dropout": [0.2, 0.3, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 5,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "grad_norm": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}
